{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "timezone": "Asia/Tokyo",
  "schedule": ["after 3am", "before 4am"],
  "baseBranches": ["main"],
  "prHourlyLimit": 0,
  "dependencyDashboard": false,
  "rangeStrategy": "bump",
  "minor": { "groupName": "dependencies-minor-ver" },
  "patch": {
    "groupName": "dependencies-patch-ver",
    "automerge": true,
    "platformAutomerge": true
  }
}
